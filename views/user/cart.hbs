<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr scope="row">
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>

            <tbody>
                {{#each products}}
                <tr>
                    {{#each this.product}}
                    <td><img src="/product-images/{{this._id}}.png" alt="" style="width: 70px; height: 70px"></td>
                    <td>{{this.Name}}</td>
                    {{/each}}
                    <td>
                        <button class="cart-item-count mr-3">-<button>{{this.quantity}}</button><button class="cart-item-count ml-3">+</button></button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>