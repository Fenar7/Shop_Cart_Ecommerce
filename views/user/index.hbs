<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
  </head>
  <body>
    <!-- Just an image -->

    <section class="container mt-4">
        <div class="row">
            {{#each products}}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                    <img 
                    src="/product-images/{{this._id}}.png"
                    class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Category}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">{{this.Price}}</a>
                        <button onclick="addToCart("{{this._id}}")" class="btn btn-primary">Add To Cart</button>
                    </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
  </body>
</html>